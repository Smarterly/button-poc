{
  "name": "tokens",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/tokens/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "npm run build",
        "outputPath": "dist/packages/tokens/css",
        "assets": [
          {
            "input": "packages/tokens/src/css",
            "glob": "**/*",
            "output": "./css"
          }
        ]
      }
    },
    "lint": {
      "command": "eslint packages/tokens/**/*.{js,ts} packages/tokens/package.json"
    },
    "style-dictionary": {
      "executor": "nx:run-commands",
      "options": {
        "command": "style-dictionary build --config ./config.mjs",
        "cwd": "{projectRoot}"
      }
    }
  }
}
