{
  "name": "tokens",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/tokens/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nxkit/style-dictionary:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/tokens",
        "styleDictionaryConfig": "packages/tokens/style-dictionary.config.ts",
        "tsConfig": "packages/tokens/tsconfig.json"
      }
    },
    "lint": {
      "command": "eslint packages/tokens/**/*.{js,ts} packages/tokens/package.json"
    }
  }
}
